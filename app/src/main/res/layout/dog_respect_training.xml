                    style="@style/GreenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Talking back" />

                <TextView
                    style="@style/NormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img1"
                    android:text="@string/t19" />
            </LinearLayout>

            <ImageView
