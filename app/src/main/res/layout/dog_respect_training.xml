            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/t18" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/respect_kathy" />

        <TextView
